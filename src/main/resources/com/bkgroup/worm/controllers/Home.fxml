<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bkgroup.worm.controllers.HomeController">
   <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ScrollPane id="HomeScreen" fitToWidth="true" hbarPolicy="NEVER" hmax="0.0" pannable="FALSE" style="-fx-background-color: transparent; -fx-padding: 0; -fx-background-insets: 0;">
               <content>
                  <VBox fx:id="sections" spacing="10.0" />
               </content>
            </ScrollPane>
         </children>
      </StackPane>
      <AnchorPane id="Book Viewer" fx:id="bookViewer" layoutX="10.0" layoutY="10.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane style="-fx-background-color: #999999; -fx-opacity: 0.8;" AnchorPane.bottomAnchor="-5.0" AnchorPane.leftAnchor="-5.0" AnchorPane.rightAnchor="-5.0" AnchorPane.topAnchor="-5.0" />
            <StackPane fx:id="viewerPane" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="75.0">
               <children>
                  <AnchorPane maxHeight="340.0" maxWidth="460.0" minHeight="340.0" minWidth="460.0" style="-fx-background-color: #ffffff;" StackPane.alignment="CENTER" />
                  <HBox maxHeight="340.0" maxWidth="460.0" minHeight="340.0" minWidth="460.0" spacing="10.0" StackPane.alignment="CENTER">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <ImageView fx:id="viewerCover" fitHeight="213.0" fitWidth="155.0" pickOnBounds="true" preserveRatio="true" />
                              <HBox id="Buttons" alignment="CENTER" prefHeight="26.0" prefWidth="222.0" spacing="5.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Button id="Like" fx:id="likeButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#clickLikeButton" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" text="Like" />
                                    <Button id="Dislike" fx:id="dislikeButton" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#clickDislikeButton" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #ffffff;" text="Dislike" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label id="TitleLabel" fx:id="viewerTitle" text="[Title]">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Label id="SeriesLabel" fx:id="viewerSeries" layoutX="10.0" layoutY="10.0" text="[Series]">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Label>
                              <Label id="AuthorLabel" fx:id="viewerAuthor" layoutX="10.0" layoutY="10.0" text="[Author]" />
                              <Label id="GenreLabel" fx:id="viewerGenre" layoutX="10.0" layoutY="33.0" text="[Genre]" />
                              <ScrollPane fitToWidth="true" hbarPolicy="NEVER" hmax="0.0" prefHeight="200.0" prefWidth="300.0">
                                 <content>
                                    <Label id="DescriptionLabel" fx:id="viewerDescription" text="Description">
                                       <padding>
                                          <Insets bottom="5.0" left="5.0" right="20.0" top="5.0" />
                                       </padding></Label>
                                 </content>
                              </ScrollPane>
                              <HBox id="Buttons" prefHeight="39.0" prefWidth="222.0" spacing="5.0">
                                 <children>
                                    <Button id="AddToCart" mnemonicParsing="false" onAction="#handleAddToCart" text="Add to Cart" />
                                    <Button id="AddToWishlist" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Add to Wishlist" />
                                 </children>
                              </HBox>

                           </children>
                        </VBox>
                        <Button id="Close" fx:id="closeButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#clickCloseBookViewer" style="-fx-background-color: #ffffff;" text="Close" HBox.hgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </StackPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
