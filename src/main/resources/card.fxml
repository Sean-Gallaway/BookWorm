<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
            fx:id="base" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bkgroup.worm.Card"
            style = "-fx-padding: 0, 0, 0, 0; -fx-spacing: 0; -fx-background-color: black"
            minHeight="${sizeX/8}" minWidth="${sizeX/4}">
      <HBox  VBox.vgrow = "ALWAYS"  HBox.hgrow="ALWAYS" style = "-fx-padding: 0, 0, 0, 0; -fx-spacing: -1;"
             AnchorPane.topAnchor = "0.0"
             AnchorPane.bottomAnchor = "0.0"
             AnchorPane.rightAnchor = "0.0"
             AnchorPane.leftAnchor = "0.0">
         <VBox  VBox.vgrow = "ALWAYS" style = "-fx-padding: 0, 0, 0, 0; -fx-spacing: -1px;">
            <ImageView VBox.vgrow = "ALWAYS" HBox.hgrow="ALWAYS"
                       fx:id="book"
                       fitHeight="${sizeX/8 + 1}" fitWidth="${sizeX/8 + 1}"
                       pickOnBounds="true"
                       preserveRatio="true"/>
            <HBox VBox.vgrow = "ALWAYS"  HBox.hgrow="ALWAYS"
                  fx:id="starbox"
                  minHeight="${sizeX/48+1}" minWidth="${sizeX/8+1}"
                  style="-fx-background-color: blue;"/>
         </VBox>
         <VBox VBox.vgrow = "ALWAYS"  HBox.hgrow="ALWAYS" prefHeight="${sizeX/12}" prefWidth="${sizeX/24}">
            <FlowPane VBox.vgrow = "ALWAYS"  HBox.hgrow="ALWAYS"
                      fx:id="title"
                      minHeight="${sizeX/48}" minWidth="${sizeX/8}"
                      style="-fx-background-color: ce34f2; -fx-padding: 0, 0, 0, 0; -fx-spacing: 0"/>
            <FlowPane VBox.vgrow = "ALWAYS"  HBox.hgrow="ALWAYS"
                      fx:id="description"
                      minHeight="${sizeX/8}" minWidth="${sizeX/8}"
                      style="-fx-background-color: e75e12; -fx-padding: 0, 0, 0, 0; -fx-spacing: 0"/>
         </VBox>
      </HBox>
</AnchorPane>
